@model Assignment1.Model.Training

@{
    ViewData["Title"] = "Training Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Training ID: @Model.Id</h5>
        <p class="card-text">
            <strong>Beginnzeitpunkt:</strong> @Model.Start <br />
            <strong>Endzeitpunkt:</strong> @Model.End <br />
            <strong>Trainer:</strong> @Model.Trainer <br />
            <strong>Dauer (Minuten):</strong> @Model.Duration <br />
            <strong>Beschreibung:</strong> @Model.Description
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Zurück zur Liste</a>
</div>
